  /**
   * Constructs a new exception for the given errors.
   */
  public ConfigurationException(Errors errors) {
    errors.makeImmutable();
    this.errors = errors;

    // find a cause
    for (Message message : errors.getMessages()) {
      if (message.getCause() != null) {
        initCause(message.getCause());
        break;
      }
    }
  }

