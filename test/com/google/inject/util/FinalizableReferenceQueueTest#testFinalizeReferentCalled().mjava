  public void testFinalizeReferentCalled() {
    MockReference reference = new MockReference();
    reference.enqueue();
    // wait up to 5s
    for (int i = 0; i < 50; i++) {
      if (reference.finalizeReferentCalled) {
        return;
      }
      try {
        Thread.sleep(10);
      } catch (InterruptedException e) { /* ignore */ }
    }
    fail();
  }

