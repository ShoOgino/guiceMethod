    private Runnable asRunnable(final BindingImpl<?> binding) {
      return new Runnable() {
        @Override
        public void run() {
          try {
            binding.getInjector().initializeBinding(binding, errors.withSource(source));
          } catch (InternalConfigurationException e) {
            errors.merge(e.getErrors());
          }
        }
      };
    }

